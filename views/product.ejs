<%- include('./partials/headerLogueado.ejs') %> 
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= product.modelo %> </h2> 
			<p class="product-detail-description">
				<a href="/productAdd">Editar</a>
			</p>
		</div>
			<% for( let i = 0; i < sunglasses.length; i++ ) { %>
				<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= sunglasses[i].img %> " alt="" class="product-detail-img">
					<p class="product-detail-description">
						<p>Color del armazon: <%= sunglasses[i].colorDelArmazon %></p>
						<p>Color del lente: <%= sunglasses[i].colorDelLente %></p></p>
				</article>
			
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>
							<img src=" <%= users[i].img %> " alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/profile">Nombre usuario: <%= users[i].username %></a> </strong>
								<p>Comentario: <%= comments[i].comment %></p></p>
							</div>
						</article>
					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
				<% } %>
		
	</div>
	<!-- /product detail -->

	<%- include('./partials/footer.ejs') %> 

