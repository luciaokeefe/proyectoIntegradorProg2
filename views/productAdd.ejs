<%- include('./partials/header.ejs') %>


	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<div class="container mt-4">
				<% if (locals.error) { %>
					<div class="alert alert-danger" role="alert">
						<%= error %>
					</div>
					<% } %>
			</div>
			<!-- Show the "ultimos" products -->
			<form class="form-label" method="post" enctype="multipart/form-data" >

				<div>
					<label for="marca" class="form-label">Marca</label>
					<input type="text" id="marca" class="form-input" name="marca">
				</div>

				<div>
					<label for="name" class="form-label">Modelo</label>
					<input type="text" id="modelo" class="form-input" name="modelo">
				</div>

				<div>
					<label for="colorDelArmazon" class="form-label">Color del armaz√≥n</label>
					<input type="text" id="colorDelArmazon" class="form-input" name="colorDelArmazon">
				</div>
				
				<div>
					<label for="colorDelLente" class="form-label">Color del lente</label>
					<input type="text" id="colorDelLente" class="form-input" name="colorDelLente">
				</div>

				<div>
					<label for="IMG" class="form-label">Foto del producto</label>
					<input type="file" id="IMG" class="form-input" name="IMG">
				</div>

				
				<button class="buy-now-button" type="submit"> Agregar Producto</button>
			</form>
		</div>
	</div>

	<%- include('./partials/footer.ejs') %>